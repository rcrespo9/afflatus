<div class="new-photo_inspired">
<form class="photo-inspired-form" action="/users/<%= @user_id %>/photo_inspireds" method="post">
	
    	<img src="<%= FlickRaw.url_m(@photo_info) %>"> 

	<h2>Create Photo Inspired</h2>
  <div id="creation_title">
	<label for="photo_inspired[creation_title]">Creation Title:</label>
	<input type="text" name="photo_inspired[creation_title]" autofocus>
  </div>
  <div id="writing_area">
	<textarea rows="4" cols="50" name="photo_inspired[writing]">
	</textarea>
  </div>
	<input type="submit" value="Add Creation"/>
</form>
<%= link_to "Cancel", dashboard_index_path%>
</div>
 